<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <!-- Hình ảnh của bàn -->
        <ImageView
            android:id="@+id/img_catalog"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:scaleType="centerCrop"
            android:src="@drawable/seat_image" />

        <!-- Tên bàn (hiển thị phía dưới cùng bên trái) -->
        <TextView
            android:id="@+id/tv_catalog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="30dp"
            android:text="Bàn làm việc"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Mô tả bàn (hiển thị phía dưới cùng) -->
        <TextView
            android:id="@+id/tv_catalog_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="7dp"
            android:text="1 table 1 chair"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>