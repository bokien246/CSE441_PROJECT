<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="BottomNavigationTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">20sp</item>  <!-- Kích thước title 20sp -->
        <item name="android:textColor">@color/black</item>  <!-- Màu đen cho title -->
    </style>

    <style name="Theme.TransparentModal" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/semi_transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>